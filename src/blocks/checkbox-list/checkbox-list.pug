mixin checkbox-list(buttons = [], text = 'список', classes = '')
  .iqdropdown.iqdropdown__checkbox-list.js-iqdropdown__checkbox-list(class='' + classes)
    .iqdropdown-selection.iqdropdown-selection__checkbox-list
      p.checkbox-list__text=text
      .material-icons.material-icons__expand-more expand_more
    .iqdropdown-menu.checkbox-list_border_none
      each button in buttons
        if (button.first)
          .iqdropdown-menu-option.iqdropdown-menu-option__checkbox-list.iqdropdown-menu-option__checkbox-list_first
            +choose-button(button, 'checkbox')
        else 
          .iqdropdown-menu-option.iqdropdown-menu-option__checkbox-list
              +choose-button(button, 'checkbox')
mixin checkbox-list(buttons, menuOpen)
    .iqdropdown.iqdropdown__checkbox-list(class='' + menuOpen)
        .iqdropdown-selection
            p.checkbox-list__text expandable checkbox list
            .material-icons.material-icons__expand-more expand_more
        .iqdropdown-menu.checkbox-list_border_none
            each button in buttons
                +chose-button(button, 'checkbox')
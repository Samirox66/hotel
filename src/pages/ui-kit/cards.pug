include ../../blocks/find-room/find-room.pug
include ../../blocks/sign-up/sign-up.pug
include ../../blocks/room/room.pug
include ../../blocks/sign-in/sign-in.pug
include ../../blocks/choose-room/choose-room.pug
include ../../blocks/dropdown/dropdown.pug
include ../../blocks/date-dropdown/date-dropdown.pug
include ../../blocks/text/text.pug

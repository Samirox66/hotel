extends ../../pug/layouts/main.pug
include ../../blocks/color/color.pug
include ../../blocks/text/text.pug
include ../../blocks/input/input.pug
include ../../blocks/header/header.pug
include ../../blocks/button/button.pug
include ../../blocks/logo/logo.pug
include ../../blocks/contacts/contacts.pug
include ../../blocks/chose-button/chose-button.pug
include ../../blocks/toggle/toggle.pug
include ../../blocks/like-button/like-button.pug
include ../../blocks/rate-button/rate-button.pug
include ../../blocks/range-slider/range-slider.pug
include ../../blocks/title-block/title-block.pug
include ../../blocks/pagination/pagination.pug
include ../../blocks/dropdown/dropdown.pug
include ../../blocks/checkbox-list/checkbox-list.pug

block content
    .ui-kit
        .colors-and-type
            .column-colors.column-colors__body
                +color('Dark Shade 100%', '#1F2041', 'color__example_background_dark-shade-100')
                +color('Dark Shade 75%', '#1F2041', 'color__example_background_dark-shade-75')
                +color('Dark Shade 50%', '#1F2041', 'color__example_background_dark-shade-50')
                +color('Dark Shade 25%', '#1F2041', 'color__example_background_dark-shade-25')
                +color('Dark Shade 5%', '#1F2041', 'color__example_background_dark-shade-5')
                +color('Purple', '#BC9CFF', 'color__example_background_purple')
                +color('Green', '#6FCF97', 'color__example_background_green')
            .column-text.column-text__body 
                +text('H1', 'This one is the sub-section or widget title', 'h1')
                +text('H2', 'Next one is the item title inside widgets', 'h2')
                +text('H3', 'This is a label or CTA text', 'h3')
                +text('Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.', 'p')
        +header(true, 'Юлий Цезарь')
        +header(false)
        include ../../blocks/footer1/footer1.pug
        include ../../blocks/footer2/footer2.pug
        .form-elements
            .form-elements__block 
                .form-elements__column
                    +input('Email', 'text', false, true, 'text field', 'default', 'input__width_big')
                    +input('This is pretty awesome', 'text', false, true, 'text field', 'hover/focus', 'input__margin_top_20 input__width_big')
                    +input('Сколько гостей', 'number', false, false, 'Dropdown', '', 'input__margin_top_20 input__width_big', true)
                    +input('ДД.ММ.ГГГГ', 'date', false, false, 'masked text field', '', 'input__margin_top_20 input__width_big')
                    .form-elements__date.input__margin_top_20 
                        +input('ДД.ММ.ГГГГ', 'date', false, false, 'date Dropdown', '', 'input__width_small', true)
                        +input('19.08.2019', 'date', false, false, 'date Dropdown', '', 'input__margin_left_20 input__width_small', true)
                    +input('19 авг - 23 авг', 'text', false, false, 'filter date dropdown', '', 'input__margin_top_20 input__width_medium', true)
                    +input('Email', 'email', false, false, 'subscription text field', '', 'input__margin_top_20 input__width_medium', true)
                .form-elements__column 
                    +title-block('Checkbox Buttons')
                    +chose-button({'id':'isSmokingAllowed', 'text':'Можно курить', 'name':'isSmokingAllowed'}, 'checkbox')
                    +chose-button({'id':'arePetAllowed', 'text':'Можно с питомцами', 'name':'arePetAllowed', 'checked': true}, 'checkbox')   
                    +chose-button({'id':'areGuestsAllowed', 'text':'Можно пригласить гостей (до 10 человек)', 'name':'areGuestsAllowed', 'checked': true}, 'checkbox')
                    +title-block('radio buttons')
                    .chose-button__container
                        +chose-button({'id':'man', 'text':'Мужчина' ,'name':'gender', 'value':'man', 'checked': true}, 'radio')
                        +chose-button({'id':'woman', 'text':'Женщина', 'name':'gender', 'value':'woman'}, 'radio')
                    .form-elements__title Toggle
                    +toggle(true, 'Получать спецпредложения')
                    +toggle(false, 'Получать спецпредложения')
                    .form-elements__title like button
                    .form-elements__flex
                        +like-button('material-icons__favorite-border', 'like-button__button', 'like-button__number', 2, 'favorite_border')
                        +like-button('material-icons__favorite', 'like-button__button like-button__button_active', 'like-button__number like-button__number_active', 12, 'favorite')
                    .form-elements__title rate button
                    .form-elements__flex
                        +rate-button(4)
                        +rate-button(5, 'rate-button_margin-left_20')
                .form-elements__column 
                    +range-slider('Range Slider')
                    +title-block('buttons', 'title-block_margin-bottom_16px title-block_margin-top_40px')
                    .form-elements__flex
                        +button('Click me', 'button_height_big button_width_small button_color_white button_background-color_blue button_border_none')
                        +button('Click me', 'button_height_big button_width_small button_color_white button_background-color_blue button_border_none button_opacity_50per')
                    .form-elements__flex
                        +button('click me', 'button_height_big button_width_small button_color_blue button_background-color_white button_border_blue')
                        +button('click me', 'button_height_big button_width_small button_color_blue button_background-color_white button_border_blue button_border-opacity_50per')
                    .form-elements__flex
                        +button('click me', 'button_color_blue button_border_none button_background-color_white')
                        +button('click me', 'button_color_dark button_border_none button_background-color_white')
                    +button('перейти к оплате', 'button_height_big button_width_big button_color_white button_border_none button_background-color_blue', true)
                    +title-block('pagination', 'title-block_margin-bottom_16px title-block_margin-top_40px')
                    +pagination(1)
            .form-elements__block 
                .form-elements__column
                    .form-elements__flex
                        +title-block('dropdown')
                        p.form-elements__title-description default
                    +dropdown(false, [{'name':'спальни', 'id': 'rooms'}, {'name':'кровати', 'id': 'bed'}, {'name':'ванные комнаты', 'id': 'baths'}])
                    .form-elements__flex
                        +title-block('dropdown')
                        p.form-elements__title-description expanded
                    +dropdown(false, [{'name':'спальни', 'id': 'rooms'}, {'name':'кровати', 'id': 'bed'}, {'name':'ванные комнаты', 'id': 'baths'}])
                    //+checkbox-list({'id': 'breakfast', 'text': 'завтрак', 'name': 'breakfast'})

